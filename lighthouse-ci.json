{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --headless",
        "onlyCategories": ["performance", "accessibility", "best-practices", "seo"],
        "skipAudits": ["uses-http2"]
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}],
        "first-contentful-paint": ["error", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "first-input-delay": ["error", {"maxNumericValue": 100}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "speed-index": ["error", {"maxNumericValue": 3000}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "interactive": ["error", {"maxNumericValue": 3000}],
        "unused-javascript": ["warn", {"maxLength": 2}],
        "unused-css-rules": ["warn", {"maxLength": 2}],
        "unminified-javascript": ["error", {"maxLength": 0}],
        "unminified-css": ["error", {"maxLength": 0}],
        "render-blocking-resources": ["warn", {"maxLength": 3}],
        "offscreen-images": ["warn", {"maxLength": 5}],
        "uses-webp-images": ["warn", {"maxLength": 3}],
        "uses-optimized-images": ["warn", {"maxLength": 3}],
        "modern-image-formats": ["warn", {"maxLength": 3}],
        "uses-text-compression": ["error", {"maxLength": 0}],
        "uses-responsive-images": ["warn", {"maxLength": 5}],
        "efficient-animated-content": ["warn", {"maxLength": 2}],
        "legacy-javascript": ["warn", {"maxLength": 3}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {
      "port": 9001,
      "storage": "./lighthouse-ci-data"
    }
  }
}