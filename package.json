{
  "name": "performance-optimized-app",
  "version": "1.0.0",
  "description": "A performance optimized web application with comprehensive monitoring and optimization tools",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "preview": "vite preview",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --chrome-flags=\"--headless\"",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --preset=perf --form-factor=mobile --throttling-method=devtools --output=html --output-path=./lighthouse-mobile.html",
    "performance:test": "npm run build && npm run preview & npm run lighthouse:ci",
    "performance:monitor": "node scripts/performance-monitor.js",
    "bundle:analyze": "npx webpack-bundle-analyzer dist/stats.json",
    "bundle:size": "bundlesize",
    "test": "vitest",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "web-vitals": "^3.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^3.1.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "vite": "^4.1.0",
    "vite-plugin-pwa": "^0.14.4",
    "vite-plugin-compression": "^0.5.1",
    "rollup-plugin-visualizer": "^5.9.0",
    
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "terser-webpack-plugin": "^5.3.6",
    "compression-webpack-plugin": "^10.0.0",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.5.4",
    
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-loader": "^9.1.2",
    
    "css-loader": "^6.7.3",
    "style-loader": "^3.3.1",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.15",
    
    "@lhci/cli": "^0.11.1",
    "lighthouse": "^9.6.8",
    "bundlesize": "^0.18.1",
    
    "vitest": "^0.28.4",
    "@playwright/test": "^1.30.0",
    
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-performance": "^2.0.0",
    
    "typescript": "^4.9.4"
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "250kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}